<%- include("../partials/header") %> 
<div class="container">
        <div class="row text-center d-flex flex-wrap mt-3">
        <% campgrounds.forEach((campground)=> {  %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure">
                    <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="">
                    <figcaption class="figure-caption text-end">
                        <%= campground.name %>
                    </figcaption>
                    <p>
                        <a href="/campground/edit/<%= campground._id %> " class="btn btn-warning">Editar</a>
                        <a href="/campground/delete/<%= campground._id %> " class="btn btn-danger">Deletar</a>
                    </p>
                </figure>
            </div>
        <% }); %>   
    </div>
</div>
<%- include("../partials/footer") %>
